<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.buycolle.aicang.ui.view.MyHeader
        android:id="@+id/my_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/commen_padding"
        android:layout_marginRight="@dimen/commen_padding"
        android:layout_marginTop="15dip"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="2dip">

        <RelativeLayout
            android:id="@+id/rl_question_type"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="14dip"
            android:paddingRight="14dip">

            <TextView
                android:id="@+id/tv_question_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="问题类型"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17dip" />

            <TextView
                android:id="@+id/tv_question_status_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dip"
                android:layout_toLeftOf="@+id/iv_question_status_arrow"
                android:layout_toRightOf="@+id/tv_question_status_title"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="请选择"
                android:textColor="@color/gray_tv"
                android:textSize="17dip" />

            <ImageView
                android:id="@+id/iv_question_status_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"
                android:src="@drawable/commen_right_arrow_white" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/commen_padding"
        android:layout_marginRight="@dimen/commen_padding"
        android:layout_marginTop="15dip"
        android:background="@color/black"
        android:padding="2dp">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="300dip"
            android:background="@color/white"
            android:gravity="left"
            android:hint="请简要描述您所遇到的问题"
            android:padding="@dimen/commen_padding"
            android:textColor="@color/black_tv"
            android:textSize="17dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/commen_padding"
        android:layout_marginRight="@dimen/commen_padding"
        android:layout_marginTop="15dip"
        android:background="@color/black"
        android:padding="2dp">
        <EditText
            android:id="@+id/et_contact"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:hint="请留下您的QQ或邮箱地址"
            android:paddingLeft="@dimen/commen_padding"
            android:background="@color/white"
            android:textColor="@color/black_tv"
            android:textSize="17dip" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commen_btn_hight"
        android:layout_marginLeft="@dimen/commen_padding"
        android:layout_marginRight="@dimen/commen_padding"
        android:layout_marginTop="50dip"
        android:background="@drawable/shape_orange_black"
        android:text="发送"
        android:textStyle="bold"
        android:textSize="17dip" />

</LinearLayout>