<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:background="@color/info_back_ground"
    android:padding="15dip">

    <LinearLayout
        android:id="@+id/ll_notice_has"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dip"
        android:orientation="vertical"
        android:background="@drawable/shape_white_black"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:background="@color/orange">
            <TextView
                android:id="@+id/tv_notice_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公告"
                android:textSize="18dip"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginLeft="10dip"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_notice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10月10日 10:54:55"
                android:textSize="12dip"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/tv_notice_title"
                android:layout_alignBottom="@+id/tv_notice_title"
                android:layout_marginLeft="10dip"/>

            <ImageView
                android:id="@+id/iv_notice_stick"
                android:layout_width="40dip"
                android:layout_height="15dip"
                android:src="@drawable/notice_stick_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/black"/>
        <RelativeLayout
            android:id="@+id/rl_notice_jump"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_notice_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本条公告的标题有多长jkldsjfsklfjskdklfsdfsdfsd"
                android:textColor="@color/black"
                android:textSize="16dip"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="35dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"/>

            <ImageView
                android:id="@+id/iv_jump"
                android:layout_width="25dip"
                android:layout_height="25dip"
                android:src="@drawable/notice_to_button"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_notice_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">
        <ImageView
            android:layout_width="180dip"
            android:layout_height="180dip"
            android:layout_marginTop="130dip"
            android:src="@drawable/no_infomation_pic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="现在没有公告"
            android:textColor="#808080"
            android:textSize="18dip"/>
    </LinearLayout>


</LinearLayout>