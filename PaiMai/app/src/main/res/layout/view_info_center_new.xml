<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/info_back_ground"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_my_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_my_info_icon"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginTop="30dip"
            android:layout_marginLeft="15dip"
            android:src="@drawable/my_trade_pic"/>

        <TextView
            android:id="@+id/tv_my_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的交易"
            android:textSize="18dip"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/iv_my_info_icon"
            android:layout_marginTop="35dip"
            android:layout_marginLeft="10dip"/>

        <TextView
            android:id="@+id/tv_my_info_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016年10月9日"
            android:textSize="11dip"
            android:textColor="#808080"
            android:layout_toRightOf="@+id/tv_my_info_title"
            android:layout_alignBottom="@+id/tv_my_info_title"
            android:layout_marginLeft="10dip"/>

        <TextView
            android:id="@+id/tv_my_info_count"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:text="99+"
            android:textSize="12dip"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/shape_info_ovl"
            android:layout_marginRight="15dip"
            android:layout_alignTop="@+id/tv_my_info_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/ll_activity_logo"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:layout_above="@+id/tv_my_info"
            android:layout_toRightOf="@+id/tv_my_info_time"
            android:layout_toEndOf="@+id/tv_my_info_time"
            android:layout_alignTop="@+id/iv_my_info_icon"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="15dip"
            android:gravity="right"
            >
            <ImageView
                android:id="@+id/iv_activity_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_gravity="right"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_my_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_my_info_icon"
            android:layout_toRightOf="@+id/iv_my_info_icon"
            android:textSize="14dip"
            android:textColor="@color/black"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="35dip"
            android:text="您所出的商品{LoveLive手办}价格被超fsdfsdfffsdfsdfsd"
            android:layout_marginLeft="10dip"/>


    </RelativeLayout>

   <LinearLayout
       android:layout_width="315dip"
       android:layout_height="1dip"
       android:background="@color/info_line_color"
       android:layout_marginLeft="66dip"
       android:layout_marginTop="20dip"/>

    


</LinearLayout>