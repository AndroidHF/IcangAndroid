<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/info_back_ground"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:paddingTop="20dip"
    android:paddingRight="15dip"
    android:paddingLeft="15dip">


    <LinearLayout
        android:id="@+id/ll_trade_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dip"
        android:background="@drawable/shape_white_black"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dip">
            <ImageView
                android:id="@+id/iv_list_pic"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:scaleType="centerCrop"
                android:src="@drawable/system_messages_pic"/>

            <LinearLayout
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_list_pic"
                android:background="@color/black"
                android:orientation="vertical"
                android:id="@+id/linearLayout" />
            <TextView
                android:id="@+id/tv_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016年10月11日 18:58:55"
                android:textSize="14dip"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/iv_list_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/my_trade_list_pic"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dip"
                android:layout_marginRight="10dip"/>

            <TextView
                android:id="@+id/tv_list_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您所出的【lovelive手办】价格已经被超过，快去看看吧！年后的卡号的卡拉是领导开会"
                android:textSize="15dip"
                android:textColor="@color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout"
                android:layout_below="@+id/tv_list_time"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:lineSpacingExtra="2dip"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="18dip"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>