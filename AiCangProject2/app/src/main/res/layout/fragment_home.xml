<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">
    <ru.noties.scrollable.ScrollableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollLablelayout">
        <RelativeLayout
            android:id="@+id/rl_head"
            android:layout_width="match_parent"
            android:layout_height="63dp">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/lltop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_event_top"
                    android:background="@color/orange"
                    android:layout_width="match_parent"
                    android:layout_height="52.0dip">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:id="@+id/ll_event_menu"
                        android:background="@color/black"
                        android:layout_width="83.0dip"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true">
                        <ImageView
                            android:id="@+id/iv_show_smile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/event_top_icon" />
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/rl_search"
                        android:background="@mipmap/commen_search_bg"
                        android:layout_width="170.0dip"
                        android:layout_height="30.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:paddingRight="10.0dip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/commen_search_icon"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <!--
            <com.example.hufeng.views.AutoScrollViewPager
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/convenientBanner"
                android:layout_below="@id/lltop"/>
                -->
        </RelativeLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/convenientBanner"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/pagerStrip"
            android:background="@color/orange"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />
        <com.example.hufeng.views.FixViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </ru.noties.scrollable.ScrollableLayout>

</RelativeLayout>