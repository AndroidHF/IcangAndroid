<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true">
    <RelativeLayout
        android:id="@+id/rl_event_top"
        android:background="@color/orange"
        android:layout_width="match_parent"
        android:layout_height="52.0dip">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_event_menu"
            android:background="@color/black"
            android:layout_width="83.0dip"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">
            <ImageView android:layout_width="45.0dip"
                android:layout_height="31.0dip"
                android:src="@mipmap/event_top_icon" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_search"
            android:background="@mipmap/commen_search_bg"
            android:layout_width="170.0dip"
            android:layout_height="30.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/commen_search_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120.0dip">
        <ImageView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/defaut_image_1"
            android:scaleType="fitXY" />
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30.0dip">
            <TextView
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_paimai_ing"
                android:background="@drawable/shape_orange_black"
                android:layout_width="125.0dip"
                android:layout_height="25.0dip"
                android:layout_marginRight="-1.0dip"
                android:text="正在进行的拍卖" />
            <TextView android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_paimai_comming"
                android:background="@drawable/shape_white_black"
                android:layout_width="125.0dip"
                android:layout_height="25.0dip"
                android:layout_marginLeft="-2.0dip"
                android:layout_marginRight="-2.0dip"
                android:text="即将进行的拍卖" />
            <TextView android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_paimai_finish"
                android:background="@drawable/shape_white_black"
                android:layout_width="90.0dip"
                android:layout_height="25.0dip"
                android:layout_marginLeft="-1.0dip"
                android:text="已结束" />
        </LinearLayout>
    </FrameLayout>
    <com.example.hufeng.views.FixViewPager
        android:id="@+id/vp_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"/>

</LinearLayout>