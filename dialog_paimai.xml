<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingLeft="20.0dip"
    android:paddingRight="20.0dip"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_black"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/commen_tv_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center" android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:singleLine="true" />
        <RelativeLayout
            android:gravity="center_vertical"
            android:background="@color/orange"
            android:paddingLeft="17.0dip"
            android:paddingRight="17.0dip"
            android:layout_width="match_parent"
            android:layout_height="60.0dip">
            <TextView
                android:textSize="@dimen/commen_tv_size"
                android:textStyle="bold"
                android:textColor="@color/black_tv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="现价"
                android:layout_alignParentLeft="true" />
            <TextView
                android:textSize="@dimen/commen_tv_size"
                android:textStyle="bold"
                android:textColor="@color/black_tv"
                android:gravity="center"
                android:id="@+id/tv_current_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="￥255"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingLeft="17.0dip"
            android:paddingRight="17.0dip"
            android:layout_width="match_parent"
            android:layout_height="60.0dip">
            <TextView
                android:textSize="@dimen/commen_tv_size"
                android:textStyle="bold"
                android:textColor="@color/black_tv"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="出价" />
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@drawable/shape_white_black"
                android:paddingLeft="6.0dip"
                android:paddingRight="6.0dip"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="10.0dip">
                <TextView
                    android:textSize="10.0dip"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*您输入的价格必须\n比当前价格更高" />
                <EditText
                    android:textColor="@color/black_tv"
                    android:gravity="right|center"
                    android:id="@+id/et_input_value"
                    android:background="@null"
                    android:paddingLeft="5.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="255"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="right|center"
            android:orientation="horizontal"
            android:background="@color/white"
            android:paddingLeft="17.0dip"
            android:paddingRight="17.0dip"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip">
            <TextView
                android:textSize="@dimen/commen_tv_size_lage"
                android:textStyle="bold"
                android:textColor="@color/black_tv"
                android:gravity="center"
                android:id="@+id/tv_plus_1"
                android:background="@drawable/shape_orange_black"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10.0dip"
                android:text="+1" />
            <TextView
                android:textSize="@dimen/commen_tv_size_lage"
                android:textStyle="bold"
                android:textColor="@color/black_tv"
                android:gravity="center"
                android:id="@+id/tv_plus_5"
                android:background="@drawable/shape_orange_black"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10.0dip"
                android:text="+5" />
            <TextView
                android:textSize="@dimen/commen_tv_size_lage"
                android:textStyle="bold"
                android:textColor="@color/black_tv"
                android:gravity="center"
                android:id="@+id/tv_plus_10"
                android:background="@drawable/shape_orange_black"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+10" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/shape_white_round_bottom"
            android:paddingLeft="@dimen/commen_padding"
            android:paddingRight="@dimen/commen_padding"
            android:layout_width="match_parent"
            android:layout_height="70.0dip">
            <TextView
                android:textSize="@dimen/commen_tv_size"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@id/tv_cancle"
                android:background="@drawable/shape_white_black"
                android:layout_width="fill_parent"
                android:layout_height="40.0dip"
                android:layout_marginRight="8.0dip"
                android:text="取消"
                android:layout_weight="1.0" />
            <TextView
                android:textSize="@dimen/commen_tv_size"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_sure"
                android:background="@drawable/shape_orange_black"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_marginLeft="8.0dip"
                android:text="确定"
                android:layout_weight="1.0" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>